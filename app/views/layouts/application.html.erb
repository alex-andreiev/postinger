
<!DOCTYPE html>
<html>
  <head>
    <title>Postinger</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container">
      <div class="row">

        <div class="col-lg-12">
          <%#= render 'shared/header' %>
        </div>

        <div class="col-lg-12">
          <%= render 'shared/navbar' %>
        </div>

        <div class="col-lg-9">
          <div class="container main">
            <%= yield %>
          </div>
        </div>

        <% if user_signed_in? %>

        <div class="col-lg-3">
          <%= render 'shared/accounts'%>
          <%= render 'shared/rssfeeds'%>
        </div>
  
        <% end %>

        <div class="col-lg-12">
          <%#= render 'shared/footer' %>
        </div>

      </div>
    </div>
  </body>
</html>
