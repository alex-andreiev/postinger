<% if @posts.present? %>

  <h1>Posts</h1>

    <div class="container">
      <div class="row">
          <%= render @posts %>
      </div>
    </div>

<% else %>

  <div class="center-btn">
    <a href="/posts/new" class="btn btn-default btn-lg btn-block" role="button">Create posts</a>
  </div>

<% end %>
